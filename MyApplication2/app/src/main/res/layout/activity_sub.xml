<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
<RelativeLayout
    android:layout_width="360dp"
    android:layout_height="70dp"
    android:id="@+id/layout">
    <TextView
        android:layout_width="264dp"
        android:layout_height="36dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="17dp"
        android:text="@string/main_header"
        android:textColor="#D9252525"
        android:textSize="15dp" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/robot_avatar" />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="474.5dp"
            android:layout_height="240dp"
            app:srcCompat="@drawable/image_coffee" />

        <TextView
            android:layout_width="142.6dp"
            android:layout_height="28dp"
            android:layout_marginLeft="108.7dp"
            android:layout_marginTop="92.6dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="@string/coffee"
            android:textColor="#FFFFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="87dp"
            android:layout_height="1.7dp"
            android:layout_marginLeft="136.7dp"
            android:layout_marginTop="124.6dp"
            app:srcCompat="@drawable/divider" />

        <TextView
            android:layout_width="61dp"
            android:layout_height="18dp"
            android:layout_marginLeft="150.2dp"
            android:layout_marginTop="130.6dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="@string/hot_ice"
            android:textColor="#FFFFFFFF"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="240dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="360dp"
            android:layout_height="240dp"
            app:srcCompat="@drawable/image_breakfast" />

        <TextView
            android:layout_width="142.6dp"
            android:layout_height="28dp"
            android:layout_marginLeft="108.7dp"
            android:layout_marginTop="92.6dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="@string/breakfast"
            android:textColor="#FFFFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="87dp"
            android:layout_height="1.7dp"
            android:layout_marginLeft="136.7dp"
            android:layout_marginTop="124.6dp"
            app:srcCompat="@drawable/divider"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="117.7dp"
            android:layout_marginTop="130.6dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="@string/bread_sandwitch"
            android:textColor="#FFFFFFFF"
            android:textSize="15dp"
            android:textStyle="bold" />



    </RelativeLayout>


</LinearLayout>